    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const accordionHeaders = document.querySelectorAll(".accordion-header");

            accordionHeaders.forEach(header => {
                header.addEventListener("click", function() {
                    // 클릭된 헤더(h2)에 'active' 클래스 토글
                    this.classList.toggle("active");

                    // 클릭된 헤더의 다음 요소(컨텐츠 div)를 찾음
                    const accordionContent = this.nextElementSibling;

                    // 컨텐츠 패널에 'active' 클래스 토글
                    if (accordionContent) {
                        accordionContent.classList.toggle("active");
                    }
                });
            });

            /*
            // 페이지 로드 시 첫 번째 아코디언 항목을 기본으로 열어둡니다.
            // (새 구조에서는 '포함/불포함 사항'이 첫 번째입니다.)
            const firstHeader = document.querySelector(".accordion-header");
            if (firstHeader) {
                firstHeader.classList.add("active");
                if (firstHeader.nextElementSibling) {
                    firstHeader.nextElementSibling.classList.add("active");
                }
            }
            */
        });
    </script>
